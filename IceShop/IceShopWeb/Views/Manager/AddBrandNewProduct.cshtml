@model IceShopWeb.Models.Product

@{
    ViewData["Title"] = "AddBrandNewProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
<div class="text-center justify-content-center">
    <h1>Add Brand New Product</h1>
</div>
<section id="cover" class="min-vh-100">
    <div id="cover-caption">
        <div class="container">
            <div class="row text-black-50">
                <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto form p-4">
                    <h3 class="display-4 py-2 text-wrap">Add Inventory Item</h3>
                    <div class="px-2">
                        <form asp-action="AddBrandNewProduct">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            @*<div class="form-group">
                                <label asp-for="Id" class="control-label"></label>
                                <input asp-for="Id" class="form-control" />
                                <span asp-validation-for="Id" class="text-danger"></span>
                            </div>*@
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input required asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input required asp-for="Price" type="number" placeholder="0.00" min="0" step="0.01" pattern="^\d+(?:\.\d{1,2})?$" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea required asp-for="Description" rows="3" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TypeOfProduct" class="control-label"></label>
                                <select required asp-for="TypeOfProduct" asp-items="ViewBag.ProductTypes" class="form-control">
                                    <option>Select a category..</option>
                                </select>
                                <span asp-validation-for="TypeOfProduct" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

